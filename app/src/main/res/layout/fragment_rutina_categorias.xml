<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rutina_categorias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RutinaCategorias">

    <Button
        android:id="@+id/button14"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:onClick="onclickBtnNext"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <include
        android:id="@+id/include2"
        layout="@layout/progresslayout"
        android:layout_width="341dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="350dp"
        android:layout_height="467dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonTransporte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="onclickBtnTransporte"
                            android:src="@mipmap/ic_category_transporte_foreground" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView56"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transporte"
                            android:textColor="@color/purple_700"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gasto en pesos"
                            android:textColor="@color/teal_700"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextGastoTransporte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/teal_700"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0.00"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="107dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonAlimentos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="onclickBtnAlimentos"
                            android:src="@mipmap/ic_category_alimentos_foreground"
                            tools:src="@mipmap/ic_category_alimentos_foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alimentos"
                            android:textColor="@color/purple_700"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gasto en pesos"
                            android:textColor="@color/teal_700"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextGastoAlimentos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/teal_700"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0.00"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonVivienda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onclickBtnVivienda"
                            android:src="@mipmap/ic_category_vivienda_foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView59"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vivienda"
                            android:textColor="@color/purple_700"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView45"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gasto en pesos"
                            android:textColor="@color/teal_700"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextGastoVivienda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/teal_700"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0.00"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonMedicamentos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onclickBtnMedicamentos"
                            android:src="@mipmap/ic_category_medicamentos_foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView58"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medicamentos"
                            android:textColor="@color/purple_700"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gasto en pesos"
                            android:textColor="@color/teal_700"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextGastoMedicamentos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/teal_700"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0.00"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonOcio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onclickBtnOcio"
                            android:src="@mipmap/ic_category_ocio_foreground" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView60"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ocio"
                            android:textColor="@color/purple_700"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView55"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gasto en pesos"
                            android:textColor="@color/teal_700"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextGastoOcio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/teal_700"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0.00"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButtonOtros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onclickBtnOtros"
                            android:src="@mipmap/ic_category_other_foreground" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView61"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Otros"
                            android:textColor="@color/purple_700"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView62"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gasto en pesos"
                            android:textColor="@color/teal_700"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextGastoOtros"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/teal_700"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:text="0.00"
                            android:textColor="@color/teal_700" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>